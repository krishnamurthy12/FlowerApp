<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/vL_main_Layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_margin="8dp">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/vR_rootlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/vI_contact_pic"
        android:layout_width="45dp"
        android:layout_height="56dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="@drawable/rounded_image_design"/>
    <TextView
        android:id="@+id/vT_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vI_contact_pic"
        android:layout_toEndOf="@+id/vI_contact_pic"
        android:text="Customer name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        />
        <TextView
            android:id="@+id/vT_customer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vI_contact_pic"
            android:layout_alignStart="@+id/vT_customer_name"
            android:text="Customer address"
            android:textSize="12sp"
            />
    <TextView
        android:id="@+id/vT_customer_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vI_contact_pic"
        android:layout_alignStart="@+id/vT_customer_address"
        android:layout_below="@+id/vT_customer_name"
        android:text="Customer number"
        android:textSize="14sp"
        />

    <View
        android:layout_alignStart="@+id/vT_customer_number"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/vT_customer_number"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/dark_gray"
        android:paddingStart="50dp"
        android:paddingEnd="8dp"
        />
    </RelativeLayout>


</android.support.v7.widget.CardView>

<LinearLayout
    android:id="@+id/vL_options_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:visibility="gone">

    <TextView
        android:id="@+id/vT_lsil_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:padding="8dp"
        android:text="Update"
        android:textColor="@color/purple"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/vT_lsil_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:padding="8dp"
        android:text="Delete"
        android:textColor="@color/purple"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/vT_lsil_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:padding="8dp"
        android:text="History"
        android:textColor="@color/purple"
        android:textSize="16sp" />

</LinearLayout>
</LinearLayout>